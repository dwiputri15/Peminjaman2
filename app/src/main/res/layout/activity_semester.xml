<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Semester">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Pilih Semester Dan Matakuliah"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginVertical="80dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semester"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_marginVertical="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        />

    <Spinner
        android:id="@+id/spiner_smstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="175dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:padding="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matakuliah"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_marginVertical="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"/>
    <Spinner
        android:id="@+id/spinner_matkul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="275dp"
        android:padding="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/selanjutnya_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="380dp"
        android:padding="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:text="Selanjutnya"
        android:textStyle="bold"
        android:background="@drawable/kustom_button"/>

</RelativeLayout>